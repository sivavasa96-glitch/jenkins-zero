pipeline {
  agent {
    docker {
      image 'maven:3.9.6-eclipse-temurin-17'
      args '-v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  environment {
    APP_DIR = 'java-maven-sonar-argocd-helm-k8s/spring-boot-app'
    MANIFEST_DIR = 'java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests'
  }

  stages {

    stage('Checkout') {
      steps {
        git branch: 'main',
            url: 'https://github.com/sivavasa96-glitch/jenkins-zero.git'
      }
    }

    stage('Build and Test') {
      steps {
        sh """
          cd ${APP_DIR}
          mvn clean package
        """
      }
    }

    stage('Static Code Analysis - SonarQube') {
      environment {
        SONAR_URL = 'http://host.docker.internal:9000'
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh """
            cd ${APP_DIR}
            mvn sonar:sonar \
              -Dsonar.login=${SONAR_AUTH_TOKEN} \
              -Dsonar.host.url=${SONAR_URL}
          """
        }
      }
    }

    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "abhishekf5/ultimate-cicd:${BUILD_NUMBER}"
      }
      steps {
        script {
          sh "cd ${APP_DIR} && docker build -t ${DOCKER_IMAGE} ."

          docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
            docker.image("${DOCKER_IMAGE}").push()
          }
        }
      }
    }

    stage('Update Kubernetes Deployment Manifest') {
      environment {
        GIT_REPO_NAME = 'jenkins-zero'
        GIT_USER_NAME = 'sivavasa'
      }
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh """
            git config user.email "sivavasa96@gmail.com"
            git config user.name "sivavasa"

            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" \
              ${MANIFEST_DIR}/deployment.yml

            git add ${MANIFEST_DIR}/deployment.yml
            git commit -m "Update image to ${BUILD_NUMBER}" || echo "No changes"
            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:main
          """
        }
      }
    }
  }

  post {
    success {
      echo "✅ CI/CD Pipeline completed successfully"
    }
    failure {
      echo "❌ CI/CD Pipeline failed"
    }
  }
}
